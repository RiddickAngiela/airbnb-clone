<div class="container mt-5">
  <!-- Display success notice -->
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <!-- Render post details -->
  <%= render @post %>

  <div class="mt-3">
    <!-- Display attached image if available -->
    <% if @post.image.attached? %>
      <%= image_tag @post.image, class: "img-fluid" %>
    <% end %>

    <!-- Buttons for edit, back, and destroy -->
    <div class="mt-3">
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-secondary" %> |
      <%= link_to "Back", posts_path, class: "btn btn-dark" %>
      <br />
      <%= button_to "Destroy", @post, method: :delete, class: "btn btn-danger mt-2" %>
    </div>
  </div>
</div>


